    photo: "https://images.unsplash.com/photo-1524504388940-b1c1722653e1?auto=format&fit=crop&w=400&q=80",
  },
  {
    name: "Nombre Apellido",
    carnet: "Carnet 000000",
    photo: "https://images.unsplash.com/photo-1544723795-3fb6469f5b39?auto=format&fit=crop&w=400&q=80",
  },
];
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Proyectos para Procesos Estocásticos y Series de Tiempo</title>
    <meta
      name="description"
      content="Landing de carátula para los tres proyectos asignados (temas 3, 13 y 25) de Procesos Estocásticos y Series de Tiempo."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Manrope:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="page">
      <!-- HEADER -->
      <header class="topbar">
        <div class="brand">
          <div class="dot" />
          <span>Procesos Estocásticos</span>
        </div>
        <nav>
          <a href="#temas">Temas</a>
          <a href="#equipo">Equipo</a>
        </nav>
      </header>

      <!-- HERO -->
      <main>
        <section class="hero" id="inicio">
          <div class="hero__copy">
            <p class="eyebrow">Carátula de presentación</p>
            <h1>Proyectos para Procesos Estocásticos y Series de Tiempo</h1>
            <p class="lede">
              Página principal para la exposición de los temas 3, 13 y 25, con foco en modelos
              de Poisson, cadenas de Markov y teoría de colas. Enlaces listos para añadir el
              desarrollo matemático y las simulaciones.
            </p>

            <div class="tags">
              <span>Temas 3 · 13 · 25</span>
              <span>Grupo 42</span>
              <span>Procesos estocásticos</span>
            </div>

            <div class="cta">
              <a class="primary" href="#temas">Ver proyectos asignados</a>
            </div>
          </div>

          <div class="hero__panel">
            <div class="panel__header">
              <span class="chip">Estado</span>
              <span class="status">Preparado</span>
            </div>

            <div class="panel__list">
              <div class="panel__item">
                <span class="label">Asignatura</span>
                <p>Procesos Estocásticos y Series de Tiempo</p>
              </div>

              <div class="panel__item">
                <span class="label">Temas asignados</span>
                <p>3 · 13 · 25</p>
              </div>

              <div class="panel__item">
                <span class="label">Enfoque</span>
                <p>Modelado probabilístico, colas y simulación de procesos estocásticos.</p>
              </div>
            </div>
          </div>
        </section>

        <!-- PROYECTOS -->
        <section class="projects" id="temas">
          <div class="section__head">
            <div>
              <p class="eyebrow">Ruta de navegación</p>
              <h2>Los tres proyectos asignados</h2>
              <p class="section__lede">
                Enlaces preparados para cada tema.
              </p>
            </div>

          </div>

          <div class="cards">
            {projects.map((project) => (
              <article class="card">
                <div class="card__image">
                  <img src={project.img} alt={project.title} loading="lazy" />
                  <span class="bubble">Tema {project.id}</span>
                </div>

                <div class="card__body">
                  <h3>{project.title}</h3>
                  <p>{project.summary}</p>
                </div>

                <div class="card__footer">
                  <div class="tags-mini">
                    {project.tags?.map((tag) => (
                      <span class="badge">{tag}</span>
                    ))}
                  </div>
                  <a class="link" href={project.href}>Abrir (placeholder)</a>
                </div>
              </article>
            ))}
          </div>
        </section>

        <!-- EQUIPO -->
        <section class="team" id="equipo">
          <p class="eyebrow">Integrantes</p>
          <h2>Equipo del proyecto · Grupo 42</h2>

          <div class="team-grid">
            {team.map((member) => (
              <article class="member">
                <div class="avatar">
                  <img src={member.photo} alt={`Foto de ${member.name}`} loading="lazy" />
                </div>
                <div class="member__info">
                  <h3>{member.name}</h3>
                  <p>{member.carnet}</p>
                </div>
              </article>
            ))}
          </div>
        </section>
      </main>

      <footer class="footer">
        <span>Universidad Mayor de San Andrés · 2025</span>
      </footer>
    </div>

    <!-- PARTICLES CONTAINER -->
    <div id="tsparticles"></div>
  </body>

  <!-- CDN CORRECTO (versión 2 con API global) -->
  <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>

  <!-- CONFIGURACIÓN SUAVE -->
  <script>
    const accent =
      getComputedStyle(document.documentElement).getPropertyValue("--accent").trim() ||
      "#8ad6ff";
    const accent2 =
      getComputedStyle(document.documentElement).getPropertyValue("--accent-2").trim() ||
      "#72f0d5";

    window.addEventListener("load", () => {
      const container = document.getElementById("tsparticles");
      if (!container || !window.tsParticles) return;

      window.tsParticles
        .load("tsparticles", {
          fpsLimit: 60,
          background: { color: "transparent" },
          fullScreen: { enable: false },

          particles: {
            number: { value: 70, density: { enable: true, area: 900 } },
            color: { value: [accent, accent2] },

            opacity: {
              value: 0.15,
              random: { enable: true, minimumValue: 0.05 },
              animation: {
                enable: true,
                speed: 0.4,
                minimumValue: 0.05,
                sync: false,
              },
            },

            size: {
              value: { min: 1.2, max: 2.8 },
              animation: {
                enable: true,
                speed: 1,
                minimumValue: 0.2,
                sync: false,
              },
            },

            links: {
              enable: true,
              distance: 160,
              color: accent,
              opacity: 0.18,
              width: 0.7,
            },

            move: {
              enable: true,
              speed: 0.45,
              direction: "none",
              outModes: "out",
            },
          },

          interactivity: {
            events: {
              onHover: { enable: true, mode: "grab" },
              resize: true,
            },
            modes: {
              grab: { distance: 180, links: { opacity: 0.3 } },
            },
          },

          detectRetina: true,
        })
        .then(() => {
          const canvas = container.querySelector("canvas");
          if (canvas) canvas.style.pointerEvents = "none";
        });
    });
  </script>

  <!-- ESTILOS -->
  <style>
    #tsparticles {
      position: fixed;
      inset: 0;
      z-index: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
    }

    :global(:root) {
      --bg: #0f1117;
      --surface: #131924;
      --surface-2: #0b0e14;
      --ink: #e8ecf5;
      --muted: #9aa4b7;
      --accent: #8ad6ff;
      --accent-2: #72f0d5;
      --border: rgba(255, 255, 255, 0.06);
      --shadow: 0 20px 80px rgba(0, 0, 0, 0.35);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: "Manrope", system-ui, -apple-system, sans-serif;
      background: radial-gradient(900px at 10% 10%, rgba(138, 214, 255, 0.08), transparent),
        radial-gradient(700px at 80% 0%, rgba(114, 240, 213, 0.08), transparent),
        var(--bg);
      color: var(--ink);
      min-height: 100vh;
      line-height: 1.6;
      padding: 24px clamp(24px, 4vw, 48px) 48px;
    }

    h1,
    h2,
    h3,
    h4 {
      font-family: "Space Grotesk", "Manrope", system-ui, sans-serif;
      margin: 0;
      color: var(--ink);
      letter-spacing: -0.02em;
    }

    p {
      margin: 0;
      color: var(--muted);
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    .page {
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
      z-index: 1;
    }

    /* === HEADER === */
    .topbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 20px;
      padding: 14px 20px;
      border: 1px solid var(--border);
      border-radius: 16px;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0));
      backdrop-filter: blur(16px);
      position: sticky;
      top: 12px;
      z-index: 10;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      font-weight: 700;
      letter-spacing: 0.02em;
    }

    .dot {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background: linear-gradient(120deg, var(--accent), var(--accent-2));
      box-shadow: 0 0 0 8px rgba(114, 240, 213, 0.12);
    }

    nav {
      display: flex;
      gap: 14px;
      font-size: 14px;
      color: var(--muted);
    }

    nav a {
      padding: 8px 12px;
      border-radius: 999px;
      transition: border-color 0.2s, color 0.2s, background 0.2s;
    }

    nav a:hover {
      color: var(--ink);
      border: 1px solid var(--border);
      background: rgba(255, 255, 255, 0.02);
    }

    /* === HERO === */
    .hero {
      margin-top: 40px;
      padding: clamp(28px, 5vw, 48px);
      border: 1px solid var(--border);
      border-radius: 24px;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.04), rgba(255, 255, 255, 0.01));
      display: grid;
      grid-template-columns: 1.2fr 1fr;
      gap: clamp(20px, 4vw, 32px);
      box-shadow: var(--shadow);
    }

    .hero__copy h1 {
      font-size: clamp(32px, 5vw, 48px);
      margin-top: 8px;
    }

    .hero__copy .lede {
      margin: 12px 0 18px;
      max-width: 640px;
    }

    .eyebrow {
      font-size: 13px;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: var(--accent);
    }

    .tags {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin: 12px 0 18px;
    }

    .tags span {
      padding: 8px 12px;
      border-radius: 999px;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid var(--border);
      font-size: 13px;
      color: var(--muted);
    }

    .cta {
      margin-top: 12px;
    }

    .primary {
      display: inline-block;
      padding: 11px 16px;
      border-radius: 12px;
      font-weight: 700;
      background: linear-gradient(120deg, var(--accent), var(--accent-2));
      color: #051019;
      box-shadow: 0 12px 34px rgba(114, 240, 213, 0.25);
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 14px 32px rgba(0, 0, 0, 0.26);
    }

    .hero__panel {
      border: 1px solid var(--border);
      border-radius: 18px;
      background: linear-gradient(160deg, var(--surface), var(--surface-2));
      padding: 18px;
      display: grid;
      gap: 14px;
    }

    .panel__header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .chip {
      padding: 7px 12px;
      border-radius: 10px;
      background: rgba(138, 214, 255, 0.08);
      color: var(--accent);
      font-size: 13px;
      font-weight: 700;
    }

    .status {
      color: var(--ink);
      font-weight: 700;
    }

    .panel__list {
      display: grid;
      gap: 12px;
    }

    .panel__item {
      padding: 12px 14px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: rgba(255, 255, 255, 0.02);
    }

    .panel__item .label {
      color: var(--muted);
      font-size: 13px;
      margin-bottom: 4px;
      display: block;
    }

    /* === PROJECTS === */
    .projects {
      margin-top: 56px;
    }

    .section__head {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 22px;
    }

    .section__lede {
      margin-top: 8px;
      max-width: 680px;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 16px;
    }

    .card {
      padding: 0;
      border: 1px solid var(--border);
      border-radius: 18px;
      background: rgba(255, 255, 255, 0.02);
      display: grid;
      gap: 0;
      transition: transform 0.2s, border-color 0.2s, box-shadow 0.2s;
      overflow: hidden;
    }

    .card:hover {
      transform: translateY(-4px);
      border-color: rgba(138, 214, 255, 0.4);
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.18);
    }

    .card__image {
      position: relative;
      height: 170px;
      overflow: hidden;
      background: #0b0e14;
    }

    .card__image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      filter: saturate(1.05);
      transform: scale(1.02);
    }

    .bubble {
      position: absolute;
      bottom: 12px;
      left: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      background: rgba(5, 16, 25, 0.72);
      color: var(--accent);
      font-weight: 700;
      font-size: 13px;
      border: 1px solid var(--border);
      backdrop-filter: blur(6px);
    }

    .card__body {
      padding: 16px 16px 10px;
      display: grid;
      gap: 8px;
    }

    .card__body h3 {
      margin: 0;
      font-size: 19px;
    }

    .card__body p {
      margin: 0;
      color: var(--muted);
    }

    .card__footer {
      padding: 10px 16px 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
      flex-wrap: wrap;
    }

    .tags-mini {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }

    .badge {
      padding: 6px 10px;
      border-radius: 10px;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid var(--border);
      font-size: 13px;
      color: var(--muted);
    }

    .link {
      text-decoration: underline;
      text-decoration-color: rgba(138, 214, 255, 0.6);
      font-weight: 600;
    }

    /* === TEAM === */
    .team {
      margin-top: 48px;
      text-align: center;
      padding: 20px;
      border-radius: 18px;
      border: 1px solid var(--border);
      background: rgba(255, 255, 255, 0.02);
    }

    .team-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 14px;
      margin-top: 18px;
      text-align: left;
    }

    .member {
      display: grid;
      grid-template-columns: 64px 1fr;
      gap: 12px;
      align-items: center;
      padding: 12px;
      border-radius: 14px;
      border: 1px solid var(--border);
      background: rgba(255, 255, 255, 0.02);
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.15);
    }

    .avatar {
      width: 64px;
      height: 64px;
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid var(--border);
    }

    .avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .member__info h3 {
      margin: 0;
      font-size: 17px;
    }

    .member__info p {
      margin: 2px 0 0;
      color: var(--muted);
      font-size: 14px;
    }

    /* === FOOTER === */
    .footer {
      margin-top: 40px;
      display: flex;
      justify-content: space-between;
      gap: 12px;
      padding: 16px 6px;
      color: var(--muted);
      font-size: 14px;
      flex-wrap: wrap;
    }

    @media (max-width: 900px) {
      .hero {
        grid-template-columns: 1fr;
      }
      nav {
        display: none;
      }
      .topbar {
        position: static;
      }
    }
  </style>
</html>
