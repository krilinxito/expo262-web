---
interface Props {
  brandText: string;
  links: Array<{ href: string; text: string }>;
}

const { brandText, links } = Astro.props;
---

<header class="topbar">
  <div class="brand">
    <div class="dot"></div>
    <span>{brandText}</span>
  </div>
  <nav>
    {links.map(link => (
      <a href={link.href}>{link.text}</a>
    ))}
  </nav>
</header>

<style>
  .topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 20px;
    border: 1px solid var(--border);
    border-radius: 16px;
    background: rgba(255,255,255,0.02);
    backdrop-filter: blur(16px);
    position: sticky;
    top: 12px;
    z-index: 10;
  }
  
  nav {
    display: flex;
    gap: 12px;
    font-size: 14px;
    color: var(--muted);
  }
  
  nav a {
    padding: 8px 12px;
    border-radius: 999px;
    border: 1px solid transparent;
    transition: all 0.2s;
  }
  
  nav a:hover {
    color: var(--ink);
    border-color: var(--border);
    background: rgba(255,255,255,0.02);
  }
  
  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
  }
  
  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: linear-gradient(120deg, var(--accent), var(--accent-2));
    box-shadow: 0 0 0 8px color-mix(in srgb, var(--accent) 12%, transparent);
  }

  @media (max-width: 900px) {
    nav { display: none; }
    .topbar { position: static; }
  }
</style>

